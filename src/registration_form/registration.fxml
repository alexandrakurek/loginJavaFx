<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>

<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<GridPane hgap="10" alignment="CENTER"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="registration_form.RegistrationFormController">


    <columnConstraints>
        <ColumnConstraints minWidth="200" prefWidth="200" maxWidth="-Infinity" halignment="RIGHT"/>
        <ColumnConstraints minWidth="300" prefWidth="300" maxWidth="-Infinity"/>
    </columnConstraints>

    <Label text="Registration Form"
           GridPane.halignment="CENTER"
           GridPane.rowIndex="0"
           GridPane.columnIndex="0"
           GridPane.columnSpan="2">

            <font>
                <Font name="Arial" size="18"/>
            </font>
    </Label>

   <!--Username-->
    <Label text="Username:"
    GridPane.rowIndex="1" GridPane.columnIndex="0"/>

    <TextField fx:id="usernameField"
    GridPane.rowIndex="1" GridPane.columnIndex="1"/>


    <ImageView fitHeight="20.0" fitWidth="20.0" fx:id="usernameOkIcon" visible="false"
               GridPane.rowIndex="1" GridPane.columnIndex="2">
        <image>
            <Image url="@OK_icon.jpeg" />
        </image>
    </ImageView>


    <Label visible="false" textFill="#800b08" fx:id="usernameErrorLabel"
           GridPane.rowIndex="2" GridPane.columnIndex="1">
    <GridPane.margin>
        <Insets bottom="10"/>
    </GridPane.margin>
    </Label>


    <!--Name-->
    <Label text="Name:"
           GridPane.rowIndex="3" GridPane.columnIndex="0"/>

    <TextField fx:id="nameField"
            GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label visible="false" textFill="brown" fx:id="nameErrorLabel"
           GridPane.rowIndex="4" GridPane.columnIndex="1">
    <GridPane.margin>
        <Insets bottom="10"/>
    </GridPane.margin>
    </Label>





    <!--Surname-->
    <Label text="Surname:"
           GridPane.rowIndex="5" GridPane.columnIndex="0"/>

    <TextField fx:id="surnameField"
            GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <Label visible="false" textFill="brown" fx:id="surnameErrorLabel"
           GridPane.rowIndex="6" GridPane.columnIndex="1">

    <GridPane.margin>
        <Insets bottom="10"/>
    </GridPane.margin>
</Label>

    <!--Email-->
    <Label text="E-mail:"
           GridPane.rowIndex="7" GridPane.columnIndex="0"/>

    <TextField fx:id="emailField"
            GridPane.rowIndex="7" GridPane.columnIndex="1"/>

    <Label visible="false" textFill="brown" fx:id="emailErrorLabel"
           GridPane.rowIndex="8" GridPane.columnIndex="1">
    <GridPane.margin>
        <Insets bottom="10"/>
    </GridPane.margin>
</Label>

    <!--Password-->
    <Label text="Password:"
           GridPane.rowIndex="9" GridPane.columnIndex="0"/>

    <PasswordField fx:id="passwordField"
            GridPane.rowIndex="9" GridPane.columnIndex="1"/>

    <Label visible="false" textFill="brown" fx:id="passwordErrorLabel"
           GridPane.rowIndex="10" GridPane.columnIndex="1">
    <GridPane.margin>
        <Insets bottom="10"/>
    </GridPane.margin>
</Label>

    <!--Password corfirmation-->

    <Label text="Password confirmation:"
           GridPane.rowIndex="11"
           GridPane.columnIndex="0"/>

    <TextField fx:id="passwordConfirmationField"
            GridPane.rowIndex="11"
            GridPane.columnIndex="1"/>
    <Label visible="false" textFill="brown" fx:id="passwordConfirmationErrorLabel"
           GridPane.rowIndex="12" GridPane.columnIndex="1">
    <GridPane.margin>
        <Insets bottom="10"/>
    </GridPane.margin>
</Label>

    <Button text="Register"
    GridPane.rowIndex="13"
    GridPane.columnIndex="0"
    GridPane.columnSpan="2"
    GridPane.halignment="CENTER"
    onAction="#registerHandler"
  <!--onMouseExited="#onMouseExited"-->
    onMouseMoved="#onMouseButton"/>

</GridPane>