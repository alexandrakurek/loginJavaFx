<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="10" vgap="10"
          alignment="CENTER"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="login_form.LoginController">

    <columnConstraints>
        <ColumnConstraints minWidth="200" maxWidth="Infinity" prefWidth="200"
                           halignment="RIGHT"/>
        <ColumnConstraints maxWidth="Infinity" minWidth="300" prefWidth="300"/>

    </columnConstraints>

    <Label text="Username"
           GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="usernameField"
               GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Password"
           GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="passwordField"
               GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Button text="Login"
            GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2"
            defaultButton="true"
            GridPane.halignment="RIGHT"
            onAction="#handleLogin"/>
</GridPane>

